<h1>Listing prices</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Cents</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Active</th>
      <th>Creator</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= link_to_name price.product %></td>
        <td><%= price.cents %></td>
        <td><%= price.start_time %></td>
        <td><%= price.end_time %></td>
        <td><%= price.active %></td>
        <td><%= price.creator_id %></td>
        <td><%= link_to 'Show', price %></td>
        <td><%= link_to 'Edit', edit_price_path(price) %></td>
        <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

